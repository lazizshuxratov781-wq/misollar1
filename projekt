<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nokia Snake üêç</title>
  <style>
    body {
      background-color: #a0cfa0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      font-family: monospace;
      color: #002200;
    }

    h1 {
      margin-bottom: 10px;
      font-size: 28px;
    }

    canvas {
      background-color: #b5dca8;
      border: 6px solid #003300;
      image-rendering: pixelated;
      box-shadow: 0 0 20px #003300;
    }

    #score {
      font-size: 22px;
      margin-top: 10px;
      font-weight: bold;
    }

    /* Mobil boshqaruv tugmalari */
    .controls {
      margin-top: 20px;
      display: grid;
      grid-template-columns: 60px 60px 60px;
      grid-template-rows: 60px 60px 60px;
      gap: 10px;
      justify-content: center;
      align-items: center;
    }

    .btn {
      background-color: #004d00;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 22px;
      cursor: pointer;
      transition: 0.2s;
    }

    .btn:active {
      background-color: #006600;
      transform: scale(0.95);
    }

    .empty {
      background: none;
      border: none;
    }
  </style>
</head>
<body>
  <h1>üêç Nokia Snake</h1>
  <canvas id="game" width="600" height="400"></canvas>
  <div id="score">Hisob: 0</div>

  <!-- Mobil boshqaruv tugmalari -->
  <div class="controls">
    <button class="empty"></button>
    <button class="btn" id="up">‚¨ÜÔ∏è</button>
    <button class="empty"></button>

    <button class="btn" id="left">‚¨ÖÔ∏è</button>
    <button class="empty"></button>
    <button class="btn" id="right">‚û°Ô∏è</button>

    <button class="empty"></button>
    <button class="btn" id="down">‚¨áÔ∏è</button>
    <button class="empty"></button>
  </div>

  <script>
    const canvas = document.getElementById("game");
    const ctx = canvas.getContext("2d");

    const box = 20; 
    let score = 0;
    let speed = 180;

    let snake = [];
    snake[0] = { x: 10 * box, y: 10 * box };

    let foods = [
      {
        x: Math.floor(Math.random() * (canvas.width / box)) * box,
        y: Math.floor(Math.random() * (canvas.height / box)) * box
      }
    ];

    let d;

    document.addEventListener("keydown", direction);

    function direction(event) {
      if (event.key === "ArrowLeft" && d !== "RIGHT") d = "LEFT";
      else if (event.key === "ArrowUp" && d !== "DOWN") d = "UP";
      else if (event.key === "ArrowRight" && d !== "LEFT") d = "RIGHT";
      else if (event.key === "ArrowDown" && d !== "UP") d = "DOWN";
    }

    // üîò Tugmalar uchun eventlar
    document.getElementById("up").addEventListener("click", () => { if (d !== "DOWN") d = "UP"; });
    document.getElementById("down").addEventListener("click", () => { if (d !== "UP") d = "DOWN"; });
    document.getElementById("left").addEventListener("click", () => { if (d !== "RIGHT") d = "LEFT"; });
    document.getElementById("right").addEventListener("click", () => { if (d !== "LEFT") d = "RIGHT"; });

    function collision(newHead, snake) {
      for (let i = 0; i < snake.length; i++) {
        if (newHead.x === snake[i].x && newHead.y === snake[i].y) {
          return true;
        }
      }
      return false;
    }

    function randomFood() {
      return {
        x: Math.floor(Math.random() * (canvas.width / box)) * box,
        y: Math.floor(Math.random() * (canvas.height / box)) * box
      };
    }

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Fon
      for (let x = 0; x < canvas.width; x += box) {
        for (let y = 0; y < canvas.height; y += box) {
          ctx.fillStyle = (x / box + y / box) % 2 === 0 ? "#a5d6a7" : "#9ccc65";
          ctx.fillRect(x, y, box, box);
        }
      }

      // Ovqatlar
      for (let i = 0; i < foods.length; i++) {
        ctx.fillStyle = "#ff9900";
        ctx.fillRect(foods[i].x, foods[i].y, box, box);
      }

      // Ilon
      for (let i = 0; i < snake.length; i++) {
        ctx.fillStyle = i === 0 ? "#002200" : "#003300";
        ctx.fillRect(snake[i].x, snake[i].y, box, box);
      }

      let snakeX = snake[0].x;
      let snakeY = snake[0].y;

      if (d === "LEFT") snakeX -= box;
      if (d === "UP") snakeY -= box;
      if (d === "RIGHT") snakeX += box;
      if (d === "DOWN") snakeY += box;

      if (snakeX >= canvas.width) snakeX = 0;
      if (snakeX < 0) snakeX = canvas.width - box;
      if (snakeY >= canvas.height) snakeY = 0;
      if (snakeY < 0) snakeY = canvas.height - box;

      let ate = false;
      for (let i = 0; i < foods.length; i++) {
        if (snakeX === foods[i].x && snakeY === foods[i].y) {
          ate = true;
          foods.splice(i, 1);
          score++;
          document.getElementById("score").textContent = "Hisob: " + score;
          break;
        }
      }

      if (ate) {
        foods.push(randomFood());
        if (score % 3 === 0) foods.push(randomFood());
      } else {
        snake.pop();
      }

      let newHead = { x: snakeX, y: snakeY };

      if (collision(newHead, snake)) {
        clearInterval(game);
        alert("O‚Äòyin tugadi! Yakuniy hisob: " + score);
        location.reload();
      }

      snake.unshift(newHead);
    }

    let game = setInterval(draw, speed);
  </script>
</body>
</html>
